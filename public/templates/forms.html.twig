        <div class="container nav-space">
            <form class="">
                <div class="my-4">
                    <label for="exampleInputEmail1" class="form-label">Type d'absence</label>
                    <select class="form-select" aria-label="Default select example" name="select-absence" id="select-absence">
                        <option value="CP" selected>Congés payés</option>
                        <option value="NP">Non payés</option>
                        <option value="MLD">Maladie</option>
                        <option value="INT">Inter ou visite chez client</option>
                        <option value="REC">Récupération</option>
                        <option value="TEL">Télétravail</option>
                      </select>
                </div>
                <hr>
                {# //////////congés payés ///////////////////////////////////////////////////////////// #}
                <div class="select-wrapper" id="cp-wrapper">
                    <div class="my-3 ">
                        <label for="exampleInputEmail1" class="form-label">Date de départ </label>
                        <input type="text" class="form-control" name="cpDate" id="cpDate">
                    </div>
                    <div class=" mt-1 mb-3 ">
                        <label for="exampleInputEmail1" class="form-label">Heure de depart : (demi journée mini )</label>
                        <div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="depart8" id="depart8" value="8">
                                <label class="form-check-label" for="inlineRadio1">Matin ( 8h30 ou 8h45 ) </label>
                            </div>
                            
                              <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="depart8" id="depart8" value="12">
                                <label class="form-check-label" for="inlineRadio2">après-midi ( 13h30 ou 14h )</label>
                            </div>
                        </div>
                        
                    </div>
                    <hr>
                    <div class="my-3">
                        <label for="exampleInputEmail1" class="form-label">Date de retour </label>
                        <input type="text" class="form-control" name="cpDateR" id="cpDateR">
                    </div>
                    <div class=" mt-1 mb-3 ">
                        <label for="exampleInputEmail1" class="form-label">Heure de retour : (demi journée mini )</label>
                        <div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="depart8R" value="option1">
                                <label class="form-check-label" for="inlineRadio1">Matin ( 8h30 ou 8h45 ) </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="depart8R"  value="option2">
                                <label class="form-check-label" for="inlineRadio2">après-midi ( 13h30 ou 14h )</label>
                            </div>
                        </div>
                        
                    </div>
                </div>
                 {# ////////// TELETRAVAIL ///////////////////////////////////////////////////////////// #}
                 <div class="select-wrapper hidden-debut" id="tt-wrapper">
                    <div class="my-3 ">
                        <label for="exampleInputEmail1" class="form-label">Date de départ </label>
                        <input type="text" class="form-control" name="cpDate" id="ttDate">
                    </div>
                    <div class=" mt-1 mb-3 ">
                        <label for="exampleInputEmail1" class="form-label">Heure de depart : (demi journée mini )</label>
                        <div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="" value="option1">
                                <label class="form-check-label" for="inlineRadio1">8h00</label>
                            </div>
                            
                              <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="" value="option2">
                                <label class="form-check-label" for="inlineRadio2">12h30</label>
                            </div>
                        </div>
                        
                    </div>
                    <hr>
                    <div class="my-3">
                        <label for="exampleInputEmail1" class="form-label">Date de retour </label>
                        <input type="text" class="form-control" name="cpDate" id="ttDateR">
                    </div>
                    <div class=" mt-1 mb-3 ">
                        <label for="exampleInputEmail1" class="form-label">Heure de retour : (demi journée mini )</label>
                        <div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="inlineRadioOptions" value="option1">
                                <label class="form-check-label" for="inlineRadio1">8h00</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="inlineRadioOptions"  value="option2">
                                <label class="form-check-label" for="inlineRadio2">12h30</label>
                            </div>
                        </div>
                        
                    </div>
                </div>
                {# //////////NON  payés ///////////////////////////////////////////////////////////// #}
                <div class="select-wrapper hidden-debut" id="np-wrapper">
                    <div class=" my-3">
                        <label for="exampleInputEmail1" class="form-label">Date de départ : ( tranche horaire de 1 heure )</label>
                        <input type="text" class="form-control" name="npDate" id="npDate">
                    </div>
                    <hr>
                    <div class=" my-3">
                        <label for="exampleInputEmail1" class="form-label">Date de retour :  ( tranche horaire de 1 heure )</label>
